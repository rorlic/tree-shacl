@prefix tree: <https://w3id.org/tree#>.
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

tree:CollectionHasViewShape 
  sh:targetClass tree:Collection;
  sh:name "Tree view";
  sh:description "Links the collection to the current tree:Node";
  sh:severity sh:Warning;
  sh:message "TR3.3 - In a subsequent page response, a collection SHOULD refer to the current page URL using its tree:view property";
  sh:and (tree:CollectionViewSuggestedShape tree:CollectionViewCurrentNodeShape ) .

tree:CollectionViewSuggestedShape a sh:PropertyShape;
  sh:path tree:view;
  sh:node tree:NodeClassShape;
  sh:minCount 1 .

tree:CollectionViewCurrentNodeShape a sh:PropertyShape;
  sh:path (tree:view rdf:type);
  sh:hasValue tree:Node .

tree:CollectionClassShape 
  sh:property tree:CollectionViewLimitedShape .

tree:CollectionViewLimitedShape a sh:PropertyShape;
  sh:path tree:view;
  sh:node tree:NodeClassShape;
  sh:maxCount 1;
  sh:name "Tree view";
  sh:description "Links the collection to the current tree:Node";
  sh:message "TR3.3 - In a subsequent page response, a collection SHOULD refer to the current page URL using its tree:view property" .
